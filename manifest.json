{
  "manifest_version": 3,
  "name": "NYT Crossword Helper",
  "version": "1.0",
  "description": "Get explanations for NYT Crossword clues and answers",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.nytimes.com/crosswords/game/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nytimes.com/crosswords/game/*"
      ],
      "js": ["content.js"]
    }
  ]
}